<Application
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="TipCalculator.App">

	<Application.Resources>
		<ResourceDictionary>
			<Thickness x:Key="PaddingThickness">0,40,0,0</Thickness>
			<Style TargetType="Button">
				<Setter Property="FontSize" Value="26" />
			</Style>

			<Style BaseResourceKey="TitleStyle" x:Key="baseLabelStyle" TargetType="Label">
				<Setter Property="FontSize" Value="22" />
			</Style>

			<Style x:Key="infoLabelStyle" TargetType="Label" BasedOn="{StaticResource baseLabelStyle}">
				<Setter Property="FontAttributes" Value="Bold" />
				<Setter Property="FontSize" Value="32" />
			</Style>
		</ResourceDictionary>
	</Application.Resources>

</Application>